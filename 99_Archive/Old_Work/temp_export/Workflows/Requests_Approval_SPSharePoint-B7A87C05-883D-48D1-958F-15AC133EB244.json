{
  "properties": {
    "connectionReferences": {
      "shared_sharepointonline": {
        "runtimeSource": "embedded",
        "connection": {
          "connectionReferenceLogicalName": "cr4c3_sharedsharepointonline_bce50"
        },
        "api": {
          "name": "shared_sharepointonline"
        }
      },
      "shared_approvals": {
        "runtimeSource": "embedded",
        "connection": {
          "connectionReferenceLogicalName": "cr4c3_sharedapprovals_9e4d6"
        },
        "api": {
          "name": "shared_approvals"
        }
      }
    },
    "definition": {
      "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
      "contentVersion": "1.0.0.0",
      "parameters": {
        "$authentication": {
          "defaultValue": {},
          "type": "SecureObject"
        },
        "$connections": {
          "defaultValue": {},
          "type": "Object"
        }
      },
      "triggers": {
        "アイテムが作成または変更されたとき_承認用": {
          "recurrence": {
            "frequency": "Minute",
            "interval": 1
          },
          "splitOn": "@triggerOutputs()?['body/value']",
          "type": "OpenApiConnection",
          "inputs": {
            "parameters": {
              "dataset": "https://cellgentech.sharepoint.com/sites/SP__Prototype",
              "table": "62b6ee4c-05b5-42e3-b9be-fe9fcc1ccdcd"
            },
            "host": {
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_sharepointonline",
              "connectionName": "shared_sharepointonline",
              "operationId": "GetOnUpdatedItems"
            },
            "authentication": "@parameters('$authentication')"
          },
          "conditions": [
            {
              "expression": "@equals(triggerBody()?['field_8']?['Value'], '申請中')"
            }
          ],
          "runtimeConfiguration": {
            "concurrency": {
              "runs": 1
            }
          }
        }
      },
      "actions": {
        "開始して承認を待機_SP": {
          "runAfter": {},
          "type": "OpenApiConnectionWebhook",
          "inputs": {
            "parameters": {
              "approvalType": "Basic",
              "WebhookApprovalCreationInput/title": "【発注申請】@{triggerBody()?['Title']}",
              "WebhookApprovalCreationInput/assignedTo": "@{if(equals(triggerBody()?['field_9'], null), 'sengas@cellgentech.com', concat('sengas@cellgentech.com;', triggerBody()?['field_9']))}",
              "WebhookApprovalCreationInput/details": "申請ID: @{triggerBody()?['ID']}\n品目: @{triggerBody()?['OData__x54c1__x76ee__xff08_Lookup_xff0']?['Value']}\n数量: @{triggerBody()?['field_5']}\n備考: @{triggerBody()?['field_11']}",
              "WebhookApprovalCreationInput/itemLink": "https://cellgentech.sharepoint.com/sites/SP__Prototype/Lists/62b6ee4c-05b5-42e3-b9be-fe9fcc1ccdcd/DispForm.aspx?ID=@{triggerBody()?['ID']}",
              "WebhookApprovalCreationInput/itemLinkDescription": "SharePointで詳細を確認",
              "WebhookApprovalCreationInput/enableNotifications": true,
              "WebhookApprovalCreationInput/enableReassignment": true
            },
            "host": {
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_approvals",
              "connectionName": "shared_approvals",
              "operationId": "StartAndWaitForAnApproval"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "承認結果分岐": {
          "runAfter": {
            "開始して承認を待機_SP": [
              "Succeeded"
            ]
          },
          "cases": {
            "承認": {
              "case": "Approve",
              "actions": {
                "承認済み更新": {
                  "type": "OpenApiConnection",
                  "inputs": {
                    "parameters": {
                      "dataset": "https://cellgentech.sharepoint.com/sites/SP__Prototype",
                      "table": "62b6ee4c-05b5-42e3-b9be-fe9fcc1ccdcd",
                      "id": "@triggerBody()?['ID']",
                      "item/field_1": "@triggerBody()?['field_1']",
                      "item/field_5": "@triggerBody()?['field_5']",
                      "item/field_8/Value": "承認済",
                      "item/SendStatus/Value": "送付待ち"
                    },
                    "host": {
                      "apiId": "/providers/Microsoft.PowerApps/apis/shared_sharepointonline",
                      "connectionName": "shared_sharepointonline",
                      "operationId": "PatchItem"
                    },
                    "authentication": "@parameters('$authentication')"
                  }
                }
              }
            }
          },
          "default": {
            "actions": {
              "却下更新": {
                "type": "OpenApiConnection",
                "inputs": {
                  "parameters": {
                    "dataset": "https://cellgentech.sharepoint.com/sites/SP__Prototype",
                    "table": "62b6ee4c-05b5-42e3-b9be-fe9fcc1ccdcd",
                    "id": "@triggerBody()?['ID']",
                    "item/field_1": "@triggerBody()?['field_1']",
                    "item/field_5": "@triggerBody()?['field_5']",
                    "item/field_8/Value": "却下",
                    "item/SendTarget": false
                  },
                  "host": {
                    "apiId": "/providers/Microsoft.PowerApps/apis/shared_sharepointonline",
                    "connectionName": "shared_sharepointonline",
                    "operationId": "PatchItem"
                  },
                  "authentication": "@parameters('$authentication')"
                }
              }
            }
          },
          "expression": "@outputs('開始して承認を待機_SP')?['body/outcome']",
          "type": "Switch"
        }
      },
      "outputs": {}
    },
    "templateName": null
  },
  "schemaVersion": "1.0.0.0"
}